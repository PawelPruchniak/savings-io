<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
  <changeSet id="001-001" author="ppruchniak">
    <comment>User table</comment>
    <createTable tableName="user" tablespace="${data-tablespace}">
      <column name="id" type="INT" autoIncrement="true" incrementBy="1" startWith="1">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(64)"/>
      <column name="email" type="VARCHAR(256)">
        <constraints nullable="false" unique="true"/>
      </column>
    </createTable>
    <createIndex tableName="user"
                 indexName="user_id_idx"
                 tablespace="${index-tablespace}">
      <column name="id"/>
    </createIndex>
    <addPrimaryKey tableName="user"
                   columnNames="id"
                   constraintName="user_id_pl"/>
  </changeSet>

</databaseChangeLog>
